        delete
        from t_netvalue
        <where>
            <if test='fundcode!=null and fundcode!=""'>
                and fundcode = #{fundcode}
            </if>
            <if test="cDate != null">
                and c_date=#{cDate,jdbcType=INTEGER}
            </if>
        </where>
