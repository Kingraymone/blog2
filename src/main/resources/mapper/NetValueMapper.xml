        select *
        from t_netvalue t
        <where>
            <if test="fundcode != null">
                and fundcode = #{fundcode,jdbcType=VARCHAR}
            </if>
        </where>
        order by c_date asc
    </select>
    <select id="selectByNetvalue" resultType="top.king.entity.NetValue" resultMap="BaseResultMap">
        select *
        from t_netvalue t
        <where>
            <if test="fundcode != null">
                and fundcode = #{fundcode,jdbcType=VARCHAR}
            </if>
            <if test="cDate != null">
                and c_date=#{cDate,jdbcType=INTEGER}
            </if>
            <if test="uniqueId != null">
                and id = #{uniqueId,jdbcType=INTEGER},
            </if>
        </where>
        order by c_date asc
    </select>
