<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.king.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="top.king.entity.User">
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>
    <select id="selectUsers" parameterType="top.king.common.BaseQuery" resultMap="BaseResultMap">
        select t.*
        from t_user t
        <where>
            <if test='data.username!=null'>
                and t.username=#{data.username}
            </if>
            <if test='data.status!=null'>
                and t.status=#{data.status}
            </if>
            <if test='data.createTime!=null'>
                and DATE_FORMAT(t.create_time,'%Y%m%d')=#{data.createTime}
            </if>
        </where>
    </select>

    <select id="verifyUser" parameterType="top.king.entity.User" resultMap="BaseResultMap">
        select t.*
        from t_user t
        where username = #{username}
          and password = #{password}
    </select>
    <delete id="deleteUser" parameterType="java.lang.String">
        delete
        from t_user
        where user_id = #{primaryKey}
    </delete>
    <insert id="insertUser" parameterType="top.king.entity.User">
        insert into t_user(username, password, nickname, avatar, motto, create_time, mail, status)
        values (#{username},
                #{password},
                #{nickname},
                #{avatar},
                #{motto},
                sysdate(),
                #{mail},
                #{status})
    </insert>
    <update id="updateUser" parameterType="top.king.entity.User">
        update t_user
        <set>
            username = #{username},
            password = #{password},
            <if test='nickname!=null'>
                nickname = #{nickname},
            </if>
            <if test='avatar!=null'>
                avatar = #{avatar},
            </if>
            <if test='motto!=null'>
                motto = #{motto},
            </if>
            <if test='mail!=null'>
                mail = #{mail},
            </if>
            <if test='status!=null'>
                status = #{status},
            </if>
        </set>
        where
        user_id = #{userId}
    </update>
</mapper>